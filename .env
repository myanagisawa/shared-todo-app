# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shared_todo
POSTGRES_DB=shared_todo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Backend Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# Authentication
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=dev-encryption-key-change-in-production

# File Upload (Cloudinary) - Development placeholders
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration - Development placeholders
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@shared-todo.local
PGADMIN_DEFAULT_PASSWORD=admin